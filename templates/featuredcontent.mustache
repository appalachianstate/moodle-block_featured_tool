{{!
    @template block_featured_tool/modal

    Template for Modal (Bootstrap 4) popup when user clicks on 'Info...' button

    Example context (json):
    {
        "subtitle" : "Awesome title for a story",
        "snippet" : "<p><em>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Curabitur lacinia pretium nulla gravida interdum.</em></p>",
        "editorhtml" : "<p><em>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Curabitur lacinia pretium nulla gravida interdum.</em></p>"
    }
}}
<div class="card-body text-left" style="padding: 4px 0 0 0">
    <h6 class="card-subtitle mb-2 text-muted">{{subtitle}}</h6>
    <p class="card-text">{{#shortentext}} 100, {{{snippet}}} {{/shortentext}}</p>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#staticBackdrop">
        {{#str}} cardbutton, block_featured_tool {{/str}}
    </button>
</div>


<div class="modal fade" id="staticBackdrop" tabindex="-1" aria-labelledby="staticBackdropLabel" style="display: none;" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="staticBackdropLabel">{{subtitle}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>
            </div>
            <div class="modal-body">
                {{{editorhtml}}}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
